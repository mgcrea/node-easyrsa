{
  "name": "easyrsa",
  "version": "3.0.0-alpha.4",
  "description": "EasyRSA NodeJS implementation",
  "main": "lib/index.js",
  "bin": {
    "easyrsa": "lib/bin/easyrsa.js"
  },
  "scripts": {
    "build": "babel src/ -d lib/ -s",
    "build:watch": "npm run build -- -w",
    "test": "npm run test-eslint && npm run test-mocha",
    "test-eslint": "eslint src",
    "test-mocha": "mkdir .tmp 2> /dev/null; mocha --compilers js:babel-register",
    "test-mocha:watch": "npm run test-mocha -- -w",
    "prepublish": "npm run build",
    "start": "parallelshell 'npm run build:watch' 'npm run test-mocha:watch'"
  },
  "engines": {
    "node": "^4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mgcrea/node-easyrsa.git"
  },
  "author": {
    "name": "Olivier Louvignes",
    "email": "olivier@mg-crea.com"
  },
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.3.0",
    "chalk": "^1.1.1",
    "core-error-predicates": "^1.1.0",
    "del": "^2.2.0",
    "inquirer": "^0.12.0",
    "lodash": "^4.3.0",
    "moment": "^2.11.2",
    "node-forge": "^0.6.39",
    "source-map-support": "^0.4.0",
    "tildify": "^1.1.2",
    "yargs": "^3.32.0"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-eslint": "^5.0.0-beta6",
    "babel-plugin-transform-class-properties": "^6.5.2",
    "babel-plugin-transform-function-bind": "^6.5.2",
    "babel-plugin-transform-object-rest-spread": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.5.2",
    "chai": "^3.5.0",
    "eslint": "^1.10.3",
    "eslint-config-mgcrea": "^5.0.1",
    "mocha": "^2.4.5",
    "parallelshell": "^2.0.0",
    "sinon": "^1.17.3"
  },
  "optionalDependencies": {
    "ursa": "^0.9.1"
  }
}
